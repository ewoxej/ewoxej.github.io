.h1 Статистика

.container-fluid.row
	.col
		.widget-small.danger.coloured-icon
			i.icon.fas.fa-snowflake.fa-3x
			div.info
				h4 За окном
				p
					b -25°C
					
	.col
		.widget-small.info.coloured-icon
			i.icon.fas.fa-temperature-high.fas-3x
			div.info
				h4 Температура
				p
					b 25°C

	.col
		.widget-small.warning.coloured-icon
			i.icon.fas.fa-faucet.fas-3x
			div.info
				h4 Расход воды
				p
					b 10 кб. м.

	.col
		.widget-small.primary.coloured-icon
			i.icon.fas.fa-bolt.fas-3x
			div.info
				h4 Потребление электричества
				p
					b 20 кВт

.container-fluid.row
	.col-md-6
		.tile
			h3.tile-title График температуры за день (°C)
			.embed-responsive.embed-responsive-16by9
				canvas.embed-responsive-item(id="lineChartDemo")
	.col-md-6
		.tile
			h3.tile-title Расход электричества (кВт)
			.embed-responsive.embed-responsive-16by9
				canvas.embed-responsive-item(id="pieChartDemo")
				
script(type="text/javascript").
	var data = {
	labels: ["8:00", "10:00", "12:00", "15:00", "18:00","20:00","22:00"],
	datasets: [
	{
		label: "Temperature",
		fillColor: "#c158dc33",
		strokeColor: "#8e24aa",
		pointColor: "#5c007a",
		pointStrokeColor: "#fff",
		pointHighlightFill: "#fff",
		pointHighlightStroke: "rgba(220,220,220,1)",
		data: [23,24,25,30,22,23,22]
	}
	]
	};
	var pdata = [
	{
		value: 300,
		color:"#F7464A",
		highlight: "#FF5A5E",
		label: "Стиральная машина"
	},
	{
		value: 100,
		color: "#46BFBD",
		highlight: "#5AD3D1",
		label: "Бойлер"
	},
	{
		value: 50,
		color: "#FDB45C",
		highlight: "#FFC870",
		label: "Освещение"
	},
	{
		value: 20,
		color: "#808080",
		highlight: "#909090",
		label: "Другое"
	}
	]
	function init_graph()
	{
		var ctxl = $("#lineChartDemo").get(0).getContext("2d");
		var lineChart = new Chart(ctxl).Line(data);

		var ctxp = $("#pieChartDemo").get(0).getContext("2d");
		var pieChart = new Chart(ctxp).Pie(pdata);
	}
	
	$("a[href='#stat']").on('shown.bs.tab', function(e) {
		init_graph();
	});